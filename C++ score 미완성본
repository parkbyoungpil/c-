#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main() {
  double score, sum = 0;

  string line;
  
  ifstream fin("score.txt");
  ofstream fout("result.txt");
  
  if(!fin || !fout) {
    cerr << "파일을 열 수가 없습니다.";
    return 0;
  }
  while(getline(fin, line, ' ')){
    string s;
    double score;
  }
  
  for(int i = 0; i < 30; i++){      
    sum += score;
  }
  
  fout << "합계: " << score << endl;
  fout << "평균: " << score / 30.00 << endl;
  fin.close();    fout.close();
  
  cout << "처리 완료. result.txt를 열어서 결과를 확인하세요." << endl;
}
