#include <iostream>
using namespace std;

class ConvertSecond{
  private:
  int hour;
  int minute;
  int second;
  public:
  void setData();
  int getResult();
  ConvertSecond();
};

ConvertSecond::ConvertSecond(){
  hour = 0;
  minute = 0;
  second = 0;
}

void ConvertSecond::setData(){
  cout << "시(hour) 입력: ";
  cin >> hour;
  cout << "분(minute) 입력: ";
  cin >> minute;
  cout << "초(second) 입력: ";
  cin >> second;
}

int ConvertSecond::getResult(){
  int sum = 3600 * hour + 60 * minute + second;
  return sum;
}

int main() {

  ConvertSecond a;
  a.setData();
  cout << "입력하신 시간은 총 " << a.getResult() << "초 입니다." << endl;

  ConvertSecond b;
  cout << "입력하신 시간은 총 " << b.getResult() << "초 입니다." << endl;
  
}
